def Sharpe(df_price):
  #Inputs: Price / Nav / Equity Dataframe
  #Outputs: Sharpe ratio
  returns = df_price.pct_change
  mean_returns = returns.mean
  sd = returns.std
  sharpe = mean_returns / sd
  return sharpe

